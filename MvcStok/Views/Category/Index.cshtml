@using MvcStok.Models.Entity
@using PagedList;
@using PagedList.Mvc;
@model PagedList.IPagedList<TBL_KATEGORİLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <tr>
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.kategoriıd</td>
            <td>@item.kategoriad</td>
            <td><a href="/Category/Sil/@item.kategoriıd" class="btn btn-danger">SİL</a></td>
            <td><a href="/Category/KategoriGetir/@item.kategoriıd" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
    }
</table>
//indexe yönlendir ve bana yeni bir sayfa oluştur.
@Html.PagedListPager((IPagedList)Model, sayfa=>Url.Action("Index",new { sayfa}))

<a href="/Category/YeniKategori/" class="btn btn-info">YENİ KATEGORİ EKLE</a>

